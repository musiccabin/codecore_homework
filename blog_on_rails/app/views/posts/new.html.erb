<h1>Your new post!!</h1>

<% if @post.errors.any? %>
<% @post.errors.full_messages.each do |m|%>
<p><%=m%></p>
<%end%>
<%end%>

<%= form_with model: @post, local: true do |f|%>
<div>
<%=f.label :title%>
<%=f.text_field :title%>
</div>
<div>
    <%=f.label :details%>
    <%=f.text_area :body%>
</div>
<%=f.submit 'Submit'%>
<%end%>
<h1><%=@post.title%></h1>
<p><%=@post.body%></p>

<%= link_to 'Edit', edit_post_path(@post)%>
<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'delete post?'}%>

<h3>Comments</h3>
<% if @comment&.errors&.any? %>
<% @comment.errors.full_messages.each do |m| %>
<p><%=m%></p>
<%end%>
<%end%>

<%=form_with(model: [@post, @comment], local: true) do |f|%>
<%=f.text_area :body%>
<%=f.submit 'Add Comment'%>
<%end%>

<% if @comments.any?%>
<% @comments.each do |c|%>
<div>
    <p><%=c.body%></p>
    <p><%= time_ago_in_words(c.created_at) %> ago</p><%= link_to 'Delete', post_comment_path(@post, c), method: :delete, data: {confirm: 'delete comment?'}%>
</div>
<%end%>
<%end%>
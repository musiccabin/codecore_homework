<!DOCTYPE html>
<html>

<head>
  <title>BlogOnRails</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
  <header>
    <h1 class='logo'>Blog On Rails</h1>
    <nav>
    <% if current_user %>
    <div class='menu'>
      <%= link_to 'Home', root_path%>
      <%= link_to 'New! ^v^', new_post_path%>
    </div>
      <p>Hello, <%=link_to current_user.name, edit_user_path(current_user)%> | <%= link_to 'Sign Out', session_path, method: :delete%></p>
    <% else %>
    <div class='menu'>
      <%= link_to 'Home', root_path%>
      <%= link_to 'Sign In', new_session_path%>
    </div>
    <%end%>
    </nav>
  </header>
  <main class="container-fluid">
    <% flash.each do |type, message| %>
    <div class="flash flash-<%= type %>">
      <%= message%>
    </div>
    <% end %>
    <%= yield %>
  </main>
</body>

</html>